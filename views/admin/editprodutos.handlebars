{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<form action="/admin/produto/edit" method="post">
    <input type="hidden" value="{{produto._id}}" name="id">
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" value="{{produto.nome}}" class="form-control">
        <br>
        <label for="preco">Pre√ßo:</label>
        <input type="text" id="preco" name="preco" value="{{produto.preco}}" class="form-control">
        <br>
        <label for="quantidade">Quantidade:</label>
        <input type="number" min="1" id="quantidade" name="quantidade" value="{{produto.quantidade}}"
            class="form-control">
        <br>
        <label for="nome">Lista:</label>
        <select name="lista" class="custom-select">
            {{#each listas}}
            <option value="{{_id}}">{{nome}}</option>

            {{else}}

            <option value="0">Nenhuma Lista Registrada</option>

            {{/each}}

        </select>
        <br>

    </div>
    <br>

    <input type="submit" class="btn btn-success" value="Editar Produto">
</form>